<%= form_tag('trips', method: 'get') do %>
  <%= label_tag(:iata_code, "From:") %>
  <%= select_tag(:iata_code, options_for_select(AmadeusService.list_origins('EUR', 'GBP').values.flatten.map!{ |ap| [Airport.find_by(iata: ap).city.name, ap] }) ) %><br />
  <%= label_tag(:departure_date, "Date:") %>
  <%= text_field_tag :departure_date, nil, value: '2016-12-27', placeholder: 'YYYY-mm-dd' %><br />
  <%= label_tag(:duration, "How long:") %>
  <%= select_tag(:duration, options_for_select(Scraper::DURATIONS)) %>
  <br />
  <%= submit_tag("Let's get fresh air") %>
<% end %>
